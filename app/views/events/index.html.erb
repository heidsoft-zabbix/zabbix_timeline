<% content_for :header do %>
  <%= javascript_include_tag 'http://www.google.com/jsapi' %>
  <%= javascript_include_tag :timeline %>
  <%= stylesheet_link_tag :timeline %>
  <%= timeline(@events, 'timeline',
        width: '100%',
        height: '450px',
        min: @from,
        max: @till,
        style: :dot,
        zoomMin: 1000 * 60 * 60,
        showNavigation: true,
      ) %>
<% end %>

<% content_for :navbar_right do %>
  <%= form_tag events_path, method: :get, class: 'navbar-form', role: 'search' do %>
    <div class="form-group">
      <%= text_field_tag 'host_filter', @host_filter,  class: 'form-control', placeholder: 'Host' %>
    </div>
    <div class="form-group">
      <%= text_field_tag 'from', @from,  class: 'form-control', placeholder: 'From' %>
    </div>
    <div class="form-group">
      <%= text_field_tag 'till', @till,  class: 'form-control', placeholder: 'Till' %>
    </div>
    <%= button_tag 'Go', class: 'btn btn-default' %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div id="timeline"></div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= render partial: 'paginator', locals: {host_filter: @host_filter, from: @from, till: @till} %>
  </div>
</div>
